@import '../../../css/settings.styl'

.footer
  &.wide
    margin-bottom 0
    padding-bottom 0
  .footer__row
    display flex
    flex-wrap wrap
    .footer__column
      text-align left
      .footer__list
        a
          display block
          padding-left 0
          text-transform none
      &.col1
        flex 0 0 auto
        width 450px
        padding-left 20px
        @media screen and (max-width: $breakPointMedium)
          flex 2 0 auto
          width 100%
          text-align center
          padding-left 0
          padding-top 20px
      &.col2
        flex 1 0 auto
      &.col3
        flex 1 0 auto
      &.col4
        flex 2 0 auto
      &.col-with-text
        @media screen and (max-width: $breakPointMedium)
          padding-left 20px
      h1
        @media screen and (max-width: $breakPointSmall)
          font-size 20px
  .footer__second-row
    text-align left
    margin-top 60px
    margin-left 470px
    padding-right 40px
    @media screen and (max-width: $breakPointBig)
      margin-left 120px
    @media screen and (max-width: $breakPointSmall)
      margin 0
      margin-top 24px
      padding 0 24px

    h1
      font-size 26px
      @media screen and (max-width: $breakPointSmall)
        font-size 18px
        margin-bottom 0
  .footer__third-row
    a.left, a.right
      font-size 12px
      text-transform none
      padding 30px 30px
    .left
      float left
    .right
      float right



