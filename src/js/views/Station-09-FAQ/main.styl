@import '../../../css/settings.styl'

.faq
  text-align center
  i
    padding 6px
    font-size 30px
  .social-link
    font-size 12px
    color white
    min-width 50px
    display: inline-block;
  .faq__container
    width 70vw
    max-width 900px
    text-align center
    margin auto
  .faq-one
    border-top 2px solid rgba(255,255,255,0.05)
    padding 30px
    overflow: hidden;
    .faq-question
      font-size 28px
      cursor: pointer
    .faq-text
      color white
      
      line-height 1.5
      opacity 0.6
      height 0
      overflow: hidden;
      margin-top 0
      margin-bottom 0
      transition-property: all
      transition-duration: 1s
      transition-timing-function: cubic-bezier(0, 1, 0.5, 1)
      @media screen and (min-width: $breakPointSmall)
        padding 0 100px
      &.faq-text--visible
        height auto
        margin-top 14px
        margin-bottom 4px

  @media screen and (max-width: $breakPointSmall)
    .faq__container
      width 90%

    .faq-question
      font-size 24px !important
