@import '../../../css/settings.styl'

.faq
  text-align center
  i
    padding 6px
    font-size 30px
  .social-link
    font-family 'Stanley'
    font-size 12px
    color white
  .faq__container
    width 70vw
    max-width 900px
    text-align center
    margin auto
  .faq-one
    border-top 1px solid #797979
    padding 12px
    overflow: hidden;
    .faq-question
      color $hacker-blue
      font-family 'Stanley'
      font-size 28px
      cursor: pointer
    .faq-text
      color white
      font-family 'Letter Gothic Std'
      line-height 1.5
      height 0
      overflow: hidden;
      margin-top 0
      margin-bottom 0
      transition-property: all
      transition-duration: 1s
      transition-timing-function: cubic-bezier(0, 1, 0.5, 1)
      &.faq-text--visible
        height auto
        margin-top 14px
        margin-bottom 4px

  @media screen and (max-width: $breakPointSmall)
    .faq-question
      font-size 24px !important
