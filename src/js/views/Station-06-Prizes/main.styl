@import '../../../css/settings.styl'

.prizes
  &.content-container
    @media screen and (max-width: $breakPointSmall)
      padding-left 0
      padding-right 0

.circle-image__container
  display flex
  justify-content center
  flex-wrap wrap
  align-content flex-start
  .circle-image__item
    min-width 240px
    width 25vw
    max-width 400px
    margin 12px
    padding 24px
    background #151515
    flex 0 0 auto
    @media screen and (max-width: $breakPointSmall)
      min-width auto
      width 120px
      max-width auto
      padding 14px
      margin 6px
    .circle-image
      width 120px
      height 120px
      border-radius 50%
      @media screen and (max-width: $breakPointSmall)
        width 90px
        height 90px
      .image-text
      .image-text--line2
        color white