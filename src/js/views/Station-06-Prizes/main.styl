@import '../../../css/settings.styl'

.prizes
  &.content-container
    @media screen and (max-width: $breakPointSmall)
      padding-left 0
      padding-right 0
  .prize-image
    max-width 100%
    max-height 260px
    width auto
    height auto
    margin 4px
  .full-image
    max-width 100%
    max-height 200px
    width auto
    height auto
    @media screen and (max-width: $breakPointSmall)
      max-width 150px
      max-height 84px

.circle-image__container
  display flex
  justify-content center
  flex-wrap wrap
  align-content flex-start
  .circle-image__item
    min-width 240px
    width 25vw
    max-width 400px
    margin 12px
    padding 24px
    background #151515
    flex 0 0 auto
    @media screen and (max-width: $breakPointSmall)
      min-width auto
      width 120px
      max-width auto
      padding 14px
      margin 6px
    .circle-image
      width 120px
      height 120px
      margin 45px 0 25px
      border-radius 50%
      @media screen and (max-width: $breakPointSmall)
        width 90px
        height 90px
    .image-text
      margin 0
      font-size 16px
      letter-spacing 1px
      opacity 0.4
    .image-text--line2
      font-size 25px
      letter-spacing 1px
      color white
      margin-bottom 20px
    .challenge-sponsor-image
      width auto
      height auto
      max-width 120px
      max-height 60px
      margin 0 0 20px
    .challenge-sponsor-image-wide
      width auto
      height auto
      max-width 180px
      max-height 60px
      margin 0 0 20px
