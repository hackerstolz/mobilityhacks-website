.stayaway-container
  display flex
  flex-direction row
  flex-wrap wrap
  width 100vw
  background black
  box-sizing border-box
  overflow-x hidden
  padding 10px 50px
  transform translateY(-50px)
  #specialitem
    flex 1.5 220px
    margin 0 30px
  .stayaway-item
    display flex
    padding 30px 0
    flex 1 220px
    flex-direction column
    justify-content space-between
    height 100px
    align-items center
    @media screen and (max-width: $breakPointMedium)
      padding 16px 0
    .stayaway-desc
      font-size: 16px;
      color: rgba(255, 255, 255, 0.95);
      letter-spacing: 0.88px;
      max-width 210px
      text-align center
    .special
      // order -1
      max-width 190px
      font-size: 30px;
      color: rgba(255, 255, 255, 0.95);
      letter-spacing: 1.65px;
      line-height: 30px;
      text-align center
      text-transform uppercase
    #line1
      transform translateY(5px)
    #line2
      transform translateY(-10px)