@import '../../../css/settings.styl'

.home
  width 100vw
  overflow-x hidden
  text-align left
  height 100vh
  box-sizing border-box
  background: url(./img/berlin_mosaic.jpg) black;
  //background-size: 240vw auto;
  //background-repeat: no-repeat;
  ////background-attachment: fixed;
  //background-position: 0 0;
  background-repeat no-repeat
  //background-attachment: fixed;
  background-size cover
  background-position center center
  color white

  .startseite-logo__container
    position absolute
    top 55px
    left 0
    margin auto
    box-sizing border-box
    width 100%
    height calc(100% - 55px)
    text-align center
    display flex
    align-items center
    justify-content center
    //left: 50%;
    //margin: auto;
    //top: 0;
    //left: 0;
    //right: 0;
    //bottom: 0;
    .startseite-logo__img_wrap
      position absolute
      .startseite-logo__img
        width 336px
    .startseite-logo__img_br
      width 580px
      -webkit-animation youspinmeround 15s linear infinite /* Safari 4+ */
      -moz-animation    youspinmeround 15s linear infinite /* Fx 5+ */
      -o-animation      youspinmeround 15s linear infinite /* Opera 12+ */
      animation         youspinmeround 15s linear infinite /* IE 10+, Fx 29+ */

    .startseite-logo__button
      padding-top 60px
      width 100%
      display flex
      justify-content center

    @-webkit-keyframes youspinmeround {
      0%   { transform: rotate(0deg); }
      100% { transform: rotate(-360deg); }
    }

  //height 40vh

  .home__hackathon-name
    .home__hackathon-name--image
      width 40vw

  .home__teaser-text
    bottom 0
    position absolute
    font-size 16px

    ul
      position relative
      list-style none
      margin-left 0
      padding-left 1.2em
    // ul li:before
    //   content "+"
    //   position absolute
    //   font-weight 800
    //   left 0
    //   color $hacker-blue
    a
      color white
      text-decoration underline
  .home__social-icons
    margin-top 10px
    a
      padding 6px
    .social-icon--facebook
      width 22px
    .social-icon--youtube
      width 30px
    .social-icon--github
      width 24px
    .social-icon--twitter
      width 24px

  @media screen and (max-width: $breakPointSmall)
    .home__teaser-text
      margin-left 12px

    .home__hackathon-name
      padding: 12px;
  @media screen and (max-width: $breakPointMedium)
    .home__hackathon-name
      .home__hackathon-name--image
        width 50vw

    .home__teaser-text
      font-size 16px
      margin-top 60px
  @media screen and (min-width: $breakPointMedium) and (max-width $breakPointBig)
    .home__hackathon-name
      font-size: 6vw;

    .home__teaser-text
      font-size 16px
