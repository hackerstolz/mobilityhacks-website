.circle__container
  width 100%
  height 100%
  overflow hidden
  position absolute

.circle-first__container
  position absolute
  left 42%
  top 16vw
  width 35vw
  .circle-first
    animation(flash 4s ease-in-out infinite)
    width 35vw

.circle-left__container
  //.circle-left
  position absolute
  overflow hidden
  left 50vw
  top 70vh
  width 60vw
  .circle-left
    animation(spin 180s linear infinite)

@keyframes spin {
  100% {
    vendor('transform', rotate(360deg));
  }
}

@keyframes flash {
  0%, 50%, 100% {
    opacity: 1;
    vendor('transform', scale(1));
  }
  25%, 75% {
    opacity: 0.7;
    vendor('transform', scale(1.02));
  }
}

@keyframes pulse {
  0% {
    vendor('transform', scale(1));
  }
  30% {
    vendor('transform', scale(1));
  }
  40% {
    vendor('transform', scale(1.08));
  }
  50% {
    vendor('transform', scale(1));
  }
  60% {
    vendor('transform', scale(1));
  }
  70% {
    vendor('transform', scale(1.05));
  }
  80% {
    vendor('transform', scale(1));
  }
  100% {
    vendor('transform', scale(1));
  }
}

.ticket-button
  padding 48px
  position absolute
  margin auto auto
  right 0
  :hover
    opacity 0.9
  .ticket-button__image
    min-width 150px
    width 10vw
    max-width 300px
