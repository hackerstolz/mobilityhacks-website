@import "../../css/settings.styl"

a
  text-decoration none

*
  -webkit-font-smoothing antialiased

body
  font-family 'GT Pressura Mono Regular'
  color white
  overflow-x hidden

html, body, #app, .app-wrapper
  width 100%
  min-height 100%
  background #1C1B1B


  
.content-container
  padding 30px
  padding-top 60px
  width 70vw
  text-align center
  margin auto
  margin-top 50px
  margin-bottom 50px
  h1
    text-transform uppercase
    font-family 'GT Pressura Regular'
    font-size 42px
    color rgba(255,255,255,0.95)
    letter-spacing 1.92px
    margin-bottom 40px
  h2
    margin-top 28px
    margin-bottom 12px
    font-size 24px
    font-family 'GT Pressura Regular'
  .small-para
    text-align center
    margin auto
    width 50%
    max-width 700px
  p
    font-size: 18px;
    color: rgba(255,255,255,0.55);
    letter-spacing: 0px;
.hidden
  display none
//@media screen and (max-width: $breakPointSmall)
//  padding 0

.wide
  width 100vw
  background black
  box-sizing border-box
  overflow-x hidden
  padding 50px 150px

.textbox
  margin-top 50px
  margin-bottom 50px

::-webkit-scrollbar {
    width: 12px;
    background #444
    border-left 5px solid #1C1B1B
    border-right 5px solid #1C1B1B
}
 
::-webkit-scrollbar-track {
}
 
::-webkit-scrollbar-thumb {
    background: url(./img/arrow.svg) #1C1B1B no-repeat;
    border-top 25px solid #1C1B1B
}

@media screen and (max-width: $breakPointSmall)
  .not-xs
    visibility hidden

@media screen and (mmin-width: $breakPointSmall)
  .only-xs
    display hidden