@import "../../../css/settings.styl"

//.footer-container
.app-footer
  position: fixed;
  top: 0;
  left: 0;
  box-sizing: border-box;
  padding 0 10px
  width: 100%;
  height: $footer-height-lg;
  z-index: 100;
  opacity: 1;
  color: white;
  background-color: $dark-footer-gray;

  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap nowrap

  .app-footer--left
    flex 1
    align-content: flex-start;
    vendor('justify-content', flex-start);
    display: flex;

  .app-footer--right
    align-content: flex-end;
    vendor('justify-content', flex-end);

  a
    font-size 18px
    letter-spacing 0.3px
    text-transform uppercase
    font-weight 400
    padding 12px
    margin-right 16px
    color $unselected-link-gray

  .link--active
    color: $selected-link-gray;

  .hackerstolz-logo
    width 100px
    padding 10px
    margin-right 40px
    .hackerstolz-logo__img
      width 100px
    @media screen and (max-width: $breakPointMedium)
      bottom 0

@media screen and (min-width: $breakPointMedium) and (max-width $breakPointBig)
  .app-footer
    height $footer-height-medium;
    a
      font-size 12px
      letter-spacing 0.3px
      text-transform uppercase
      font-weight 400
      padding 6px
      margin-right 4px