.ticket-button
  background #0000FF
  text-align right
  padding-top 4px
  padding-right 4px
  display flex
  align-items center
  justify-content center
  border-radius 1px
  transition: 0.5s ease-in all
  &:hover
    opacity 0.7
  a.ticket-button-link
    padding 5px 20px
    margin 0
    margin-left 8px
    color white !important
    text-transform uppercase
    font-family 'GT Pressura Mono Regular'

